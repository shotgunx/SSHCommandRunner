<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender with colored output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender (optional) -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>ssh-executor.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for SSHExecutor with DEBUG level -->
    <logger name="com.virima.smartRunner.SSHExecutor" level="DEBUG"/>
    
    <!-- Logger for all Virima classes -->
    <logger name="com.virima" level="DEBUG"/>
    
    <!-- Reduce noise from Apache SSHD -->
    <logger name="org.apache.sshd" level="WARN"/>
    
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <!-- Uncomment to also log to file -->
        <!-- <appender-ref ref="FILE"/> -->
    </root>
</configuration>
